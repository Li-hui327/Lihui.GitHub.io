#include <stdio.h>
int main()
{	 int a,b,c,d;
	 printf("输入为: ");
	 scanf("%d %d",&a,&b);
	 c=(a%10)*10+(a-a%10)/10;
	 d=(b%10)*10+(b-b%10)/10;
	 if(a*b==c*d)
	 printf("输出为: %d*%d=%d*%d\n",a,b,c,d);
	 else
	 printf("输出为: %d*%d<>%d*%d",a,b,c,d);
	 return 0;
}

#include<stdio.h>
int main()
{	int i,t;
	float a[10];
	printf("请输入十个互不相同的数:");
	for(i=0;i<10;i++)
	{scanf("%f",&a[i]);}
	float max1=0,max2=0;
	for(i=0;i<10;i++)
	{	if(a[i]>max1)
		{ max1=a[i]; t=i; }
		else 
		continue;
	}
	printf("最大数为:%.2f",max1);
	a[t]=0;
	for(i=0;i<10;i++)
	{	if(a[i]>max2)
		max2=a[i];
		else 
		continue;
	}
	printf("次大数为:%.2f\n",max2);
	return 0;
}

#include <stdio.h>
int main()
{	int i,j,sum;
	for(i=1;i<500;i++)
	{	sum=0;
		for(j=i;j<500;j++)
		{	sum+=j;
			if(sum==500)
			{printf("500=%d+...+%d\n",i,j);  break;}
		}
	}
	return 0;	
}

#include <stdio.h>
int main()
{	int x,y,z;
	for(x=1;x<100;x++)
	{	for(y=1;y<100;y++)
		{	for(z=3;z<100;z+=3)
			{	if((x+y+z)==100 && (5*x+3*y+z/3)==100)
				{printf("公鸡%d只,母鸡%d只,小鸡%d只\n",x,y,z);		break;}
			}
		}
	}
	return 0;
}

#include <stdio.h>
int main()
{	int ladders,i=0;
	for(ladders=7;ladders<1000 && i<1;ladders+=7)
	{	
		if(ladders%2==1 && ladders%3==2)
		{	if(ladders%5==4 && ladders%7==0)
		 	{printf("阶数至少为%d\n",ladders);  i++;}
	 	}
	}
	return 0;
}

#include <stdio.h>
int main()
{	int x;
	for(x=10;x<1000;x++)
	{	if(x%7==3 && x%5==2)
		{	if(x%3==1 && x>900)
			printf("该校有%d名学生\n",x);
		}
	}
	return 0;
}

#include <stdio.h>
int main()
{	int a,b,y,x=1,i=1,t=0;
	char c;
	printf("请输入两个用等号连接的正整数:");
	scanf("%d%c%d",&a,&c,&b);
	while(x!=0)
	{    i=i*10;
		 x=a/i;
		 y=a%i;
		 if((x+y)==b)
		 {printf("%d+%d=%d 等式成立\n",x,y,b);  t=1;}
	}
	if(t==0)
	printf("Impossible\n");
	return 0;
}

#include <stdio.h>
int main()
{	int x,i,t,a,b,c;
	printf("请输入一个三位数:");
	scanf("%d",&x);
	do{
	a=x%10;
	b=(x/10)%10;
	c=x/100;
	int number[3]={a,b,c};
	for(i=0;i<3;i++)
	{	if(number[i]>a)
		{a=number[i]; t=i;}
	}
	number[t]=0;
	b=0;
	for(i=0;i<3;i++)
	{	if(number[i]>b)
		{b=number[i]; t=i;}
    }
	number[t]=0;
	c=0;
	for(i=0;i<3;i++)
	{	if(number[i]>c)
		{c=number[i]; }
	}
	x=(a*100+b*10+c)-(c*100+b*10+a);
	printf("%d-%d=%d\n",a*100+b*10+c,c*100+b*10+a,x);
    }while(x!=495);
    return 0;
}
