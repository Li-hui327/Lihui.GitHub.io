#include <stdio.h>
int main()
{	 int a,b,c,d;
	 printf("输入为: ");
	 scanf("%d %d",&a,&b);
	 c=(a%10)*10+(a-a%10)/10;
	 d=(b%10)*10+(b-b%10)/10;
	 if(a*b==c*d)
	 printf("输出为: %d*%d=%d*%d\n",a,b,c,d);
	 else
	 printf("输出为: %d*%d<>%d*%d",a,b,c,d);
	 return 0;
}

#include<stdio.h>
int main()
{	int i,t;
	float a[10];
	printf("请输入十个互不相同的数:");
	for(i=0;i<10;i++)
	{scanf("%f",&a[i]);}
	float max1=0,max2=0;
	for(i=0;i<10;i++)
	{	if(a[i]>max1)
		{ max1=a[i]; t=i; }
		else 
		continue;
	}
	printf("最大数为:%.2f",max1);
	a[t]=0;
	for(i=0;i<10;i++)
	{	if(a[i]>max2)
		max2=a[i];
		else 
		continue;
	}
	printf("次大数为:%.2f\n",max2);
	return 0;
}

#include <stdio.h>
int main()
{	int i,j,sum;
	for(i=1;i<500;i++)
	{	sum=0;
		for(j=i;j<500;j++)
		{	sum+=j;
			if(sum==500)
			{printf("500=%d+...+%d\n",i,j);  break;}
		}
	}
	return 0;	
}
