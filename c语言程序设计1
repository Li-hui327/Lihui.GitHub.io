#include <stdio.h>
int main()
{	int i,j;
	for (i=1;i<10;i++)
	{	for (j=i;j<10;j++)
		{	printf ("%d*%d=%2d ",i,j,i*j);
		}
		putchar ('\n');
		for (j=1;j<=i;j++)
		{	printf ("       ");
		}
	}
	return 0;
}

#include <stdio.h>
float abs(float n)
{	  if(n>=0)
	  return n;
	  else
	  return -n;
}
int main()
{	float a,x,t;
	printf("请输入一个正数:");
	scanf("%f",&a);
	for(x=a/2;abs(t-x)>1E-5;)
	{	t=x;
		x=(x+a/x)/2;
	}
	printf("数%.2f的平方根为%f\n",a,t);
	return 0;
}
