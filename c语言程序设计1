#include <stdio.h>
int main()
{	int i,j;
	for (i=1;i<10;i++)
	{	for (j=i;j<10;j++)
		{	printf ("%d*%d=%2d ",i,j,i*j);
		}
		putchar ('\n');
		for (j=1;j<=i;j++)
		{	printf ("       ");
		}
	}
	return 0;
}

#include <stdio.h>
float abs(float n)
{	  if(n>=0)
	  return n;
	  else
	  return -n;
}
int main()
{	float a,x,t;
	printf("请输入一个正数:");
	scanf("%f",&a);
	for(x=a/2;abs(t-x)>1E-5;)
	{	t=x;
		x=(x+a/x)/2;
	}
	printf("数%.2f的平方根为%f\n",a,t);
	return 0;
}

#include <stdio.h>
int main()
{	float score[10];
	int i,j,k;
	printf("请输入10名裁判的打分:"); 
	for(i=0;i<10;i++)
	{	scanf("%f",&score[i]);
	}
	float max=0,min=score[0],sum=0;
	for(i=0;i<10;i++)
	{	if(score[i]>max)
		{max=score[i]; j=i; }
		if(score[i]<min)
		{min=score[i]; k=i; }
	}
	score[j]=0;
	score[k]=0;
	for(i=0;i<10;i++)
	{	sum+=score[i];
	}
	printf("该运动员的平均得分为:%.2f\n",sum/8);
}
