	    System.out.println("本次考试学生信息如下：");
	    
	    for (int i = 0; i < no.length; i++) {
	        System.out.println("学号：" + no[i] + "|姓名：" + names[i] + "|课程：" + classes[i] + "|班级：" + "初二（三）班");
