#include <stdio.h>
int main()
{	printf("计算个人所得税\n");
	float a,b;
	printf("请输入工资:");
	scanf("%f",&a);
	b=a-3500;
	if(b>0 && b<=1500)
	printf("个人所得税:%.2f\n",b*0.03);
	else if(b>1500 && b<=4500)
	printf("个人所得税:%.2f\n",b*0.1-105);
	else if(b>4500 && b<=9000)
	printf("个人所得税:%.2f\n",b*0.2-555);
	else if(b>9000 && b<=35000)
	printf("个人所得税:%.2f\n",b*0.25-1005);
	else
	printf("输入错误\n");
	return 0;
}
